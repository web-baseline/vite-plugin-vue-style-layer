{
  "include": [
    "src",
    "vite-playground.config.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  }
}
